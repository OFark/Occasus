<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Enter Password</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField AutoFocus=true @bind-Value="@Password" Label="Password" Placeholder="Password" InputType="InputType.Password" OnKeyUp="@((e) => { if(e.Key == "Enter") { SetPassword();} })" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="SetPassword">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter, EditorRequired] MudDialogInstance MudDialog { get; set; } = default!;
    
    public string? Password { get; set; }

    private void Cancel()
    {
        Password = null;
        
        MudDialog.Cancel();
    }

    private void SetPassword()
    {
        MudDialog.Close(DialogResult.Ok(Password));
    }
}

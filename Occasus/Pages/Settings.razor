@page "/Occasus"

<PageTitle>Occasus</PageTitle>

<MudContainer MaxWidth=MaxWidth.ExtraLarge Class="py-6 pb-12" Style="margin-bottom: var(--mud-appbar-height);">

    <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6" Centered="true">
        @if (settings is not null)
        {
            @foreach (var setting in settings)
            {
                <SettingTab Setting=setting Token=cts.Token />
            }

        }
    </MudTabs>
</MudContainer>
<MudAppBar Bottom=true Color=Color.Tertiary>
    <MudGrid Spacing="3" Justify="Justify.FlexEnd">
        <MudItem>
            <MudTooltip Text="Reload Settings">
                <MudButton StartIcon=@Icons.Rounded.Refresh Variant="Variant.Outlined" IconColor="Color.Info" Color="Color.Inherit" OnClick=ReloadSettings>Reload</MudButton>
            </MudTooltip>
        </MudItem>
        <MudItem>
            <MudTooltip Text="Clear All Settings">
                <MudButton StartIcon=@Icons.Rounded.Clear Variant="Variant.Outlined" IconColor="Color.Warning" Color="Color.Inherit" OnClick=ClearSettings>Clear All</MudButton>
            </MudTooltip>
        </MudItem>
    </MudGrid>

</MudAppBar>

